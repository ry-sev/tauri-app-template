{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"include": ["src/**"],
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessStringConcat": "warn",
				"useDateNow": "warn"
			},
			"correctness": {
				"noConstantMathMinMaxClamp": "warn",
				"noUnusedFunctionParameters": "warn",
				"noUnusedImports": {
					"level": "warn",
					"fix": "unsafe"
				},
				"noUnusedVariables": "warn"
			},
			"nursery": {
				"noEnum": "warn"
			},
			"style": {
				"noDefaultExport": "warn",
				"noNamespace": "warn",
				"useConsistentArrayType": "warn",
				"useFilenamingConvention": "warn",
				"useForOf": "warn",
				"useNamingConvention": "off",
				"useSelfClosingElements": "off",
				"useThrowOnlyError": "warn"
			},
			"suspicious": {
				"useAwait": "warn",
				"useErrorMessage": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"semicolons": "always",
			"trailingCommas": "all"
		}
	}
}
